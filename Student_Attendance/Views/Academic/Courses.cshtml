@model IEnumerable<Student_Attendance.Models.Course>
@{
    ViewData["Title"] = "Courses";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Courses</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-primary" onclick="showInPopup('@Url.Action("CreateCourse","Academic",null,Context.Request.Scheme)','Add New Course')">
                    Add New
                </button>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover" id="tblData">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-info" 
                                            onclick="showInPopup('@Url.Action("EditCourse","Academic", new { id = item.Id },Context.Request.Scheme)','Edit Course')">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-danger" 
                                            onclick="confirmDelete('Academic', 'DeleteCourse', @item.Id)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#tblData').DataTable();
        });
    </script>
}