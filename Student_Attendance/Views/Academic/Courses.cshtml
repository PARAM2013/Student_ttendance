@model IEnumerable<Student_Attendance.Models.Course>
@{
    ViewData["Title"] = "Courses";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Courses</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-primary" onclick="showInPopup('@Url.Action("CreateCourse","Academic",null,Context.Request.Scheme)','Add New Course')">
                    Add New
                </button>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-hover" id="tblData">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <button type="button" class="btn btn-info btn-sm" onclick="showInPopup('@Url.Action("EditCourse","Academic",new {id=item.Id},Context.Request.Scheme)','Edit Course')">
                                    Edit
                                </button>
                                <button type="button" class="btn btn-danger btn-sm" onclick="deleteItem('@Url.Action("DeleteCourse","Academic",new {id=item.Id},Context.Request.Scheme)')">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#tblData').DataTable();
        });
    </script>
}