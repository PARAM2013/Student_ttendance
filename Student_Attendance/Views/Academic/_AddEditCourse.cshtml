@model Student_Attendance.Models.Course

<form asp-action="@(Model.Id == 0 ? "CreateCourse" : "EditCourse")"
      asp-controller="Academic"
      onsubmit="return submitForm(this);"
      autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Course Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="@(Model.Id == 0 ? "Create" : "Update")" class="btn btn-primary" />
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}