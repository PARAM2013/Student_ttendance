@model IEnumerable<Student_Attendance.Models.Class>
@{
    ViewData["Title"] = "Classes";
}

<div class="container">
    <div id="alert-container" class="mb-3"></div>
    <h2>Classes</h2>

    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addEditModal" data-url="@Url.Action("CreateClass", "Academic")">Add New Class</button>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Course</th>
                <th>Academic Year</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Course.Name</td>
                    <td>@item.AcademicYear.Name</td>
                    <td>

                        <button type="button" class="btn btn-sm btn-primary edit-btn" data-bs-toggle="modal" data-bs-target="#addEditModal" data-url="@Url.Action("EditClass", "Academic", new { id = item.Id })">Edit</button>

                        <form method="post" asp-action="DeleteClass" asp-route-id="@item.Id" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this class?')">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="addEditModal" tabindex="-1" role="dialog" aria-labelledby="addEditModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addEditModalLabel">Add/Edit Class</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showAlert(message, type) {
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>`;
            $("#alert-container").html(alertHtml);

            setTimeout(() => {
                $("#alert-container .alert").alert('close');
            }, 5000);
        }

        $(document).ready(function () {
            $('#addEditModal').on('show.bs.modal', function (e) {
                var button = $(e.relatedTarget);
                var url = button.data('url');
                var modal = $(this);

                modal.find('.modal-body').load(url, function () {
                    // Form submission
                    $('#classForm').on('submit', function (event) {
                        event.preventDefault();

                        // Get form values
                        var name = $('#Name').val();
                        var courseId = $('#CourseId').val();
                        var academicYearId = $('#AcademicYearId').val();

                        // Validate form
                        if (!name || !courseId || !academicYearId) {
                            showAlert('Please fill in all required fields', 'danger');
                            return false;
                        }

                        var formData = new FormData(this);

                        $.ajax({
                            type: "POST",
                            url: $(this).attr('action'),
                            data: $(this).serialize(),
                            success: function (response) {
                                if (response.success) {
                                    $('#addEditModal').modal('hide');
                                    showAlert('Class created successfully', 'success');
                                    setTimeout(() => location.reload(), 1000);
                                } else {
                                    showAlert(response.message || 'Error occurred', 'danger');
                                }
                            },
                            error: function (xhr) {
                                showAlert(xhr.responseText || 'An error occurred', 'danger');
                            }
                        });
                    });
                });
            });

            // Delete handling
            $('form[action*="Delete"]').submit(function (event) {
                event.preventDefault();
                if (confirm("Are you sure you want to delete this class?")) {
                    var form = $(this);
                    $.ajax({
                        type: "POST",
                        url: form.attr('action'),
                        data: form.serialize(),
                        success: function (response) {
                            showAlert('Class deleted successfully', 'success');
                            setTimeout(() => location.reload(), 1000);
                        },
                        error: function (xhr) {
                            showAlert(xhr.responseText || 'An error occurred while deleting', 'danger');
                        }
                    });
                }
            });
        });
    </script>
}