@model IEnumerable<Student_Attendance.Models.Class>
@{
    ViewData["Title"] = "Classes";
}

<div class="container">
    <h2>Classes</h2>

    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addEditModal" data-url="@Url.Action("CreateClass", "Academic")">Add New Class</button>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Course</th>
                <th>Academic Year</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Course.Name</td>
                    <td>@item.AcademicYear.Name</td>
                    <td>

                        <button type="button" class="btn btn-sm btn-primary edit-btn" data-bs-toggle="modal" data-bs-target="#addEditModal" data-url="@Url.Action("EditClass", "Academic", new { id = item.Id })">Edit</button>

                        <form method="post" asp-action="DeleteClass" asp-route-id="@item.Id" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this class?')">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="addEditModal" tabindex="-1" role="dialog" aria-labelledby="addEditModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addEditModalLabel">Add/Edit Class</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#addEditModal').on('show.bs.modal', function (e) {
                var button = $(e.relatedTarget);
                var url = button.data('url');
                var modal = $(this);

                modal.find('.modal-body').load(url, function () {
                    $.validator.unobtrusive.parse('#classForm');
                    $('#classForm').submit(function (event) {
                        event.preventDefault();
                        var form = $(this);
                        $.ajax({
                            type: "POST",
                            url: form.attr('action'),
                            data: form.serialize(),
                            success: function (data) {
                                $('#addEditModal').modal('hide');
                                location.reload();
                            },
                            error: function (xhr) {
                                if (xhr.responseText) {
                                    $('.modal-body').html(xhr.responseText);
                                    $.validator.unobtrusive.parse('#classForm');
                                }
                            }
                        });
                    });
                });
            });
        });
         $(document).ready(function () {
                 $('form[action*="Delete"]').submit(function (event) {
                    var result = confirm("Are you sure want to delete this?");
                     if(result){

                            var form = $(this);
                                     $.ajax({
                                        type: "POST",
                                        url: form.attr('action'),
                                        data: form.serialize(),
                                         success: function (data) {
                                                $("#alert-container").html(`<div class="alert alert-success alert-dismissible fade show" role="alert">${data}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>`);
                                                location.reload();
                                        },
                                         error : function(data){
                                                 $("#alert-container").html(`<div class="alert alert-danger alert-dismissible fade show" role="alert">${data.responseText}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>`);
                                        }
                                    });
                     }
                     event.preventDefault();
                   });
           });


    </script>
}