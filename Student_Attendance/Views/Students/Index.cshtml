@model IEnumerable<Student_Attendance.ViewModels.StudentViewModel>

@{
    ViewData["Title"] = "Students";
    var totalStudents = Model.Count();
    var activeStudents = Model.Count(s => s.IsActive);
    var inactiveStudents = totalStudents - activeStudents;
    
    // Fix the null propagation issue in the course grouping
    var courseGroups = Model
        .GroupBy(s => s.Course != null ? s.Course.Name : "Unassigned")
        .ToDictionary(g => g.Key, g => g.Count());
}
<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1 class="display-4">
                <i class="bi bi-mortarboard-fill me-2"></i>Students
            </h1>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Create New
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people-fill me-2"></i>Total Students</h5>
                    <h2 class="mb-0">@totalStudents</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-check-fill me-2"></i>Active Students</h5>
                    <h2 class="mb-0">@activeStudents</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-dash-fill me-2"></i>Inactive Students</h5>
                    <h2 class="mb-0">@inactiveStudents</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-book-fill me-2"></i>Total Courses</h5>
                    <h2 class="mb-0">@courseGroups.Count</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Course-wise Distribution -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-pie-chart-fill me-2"></i>Course-wise Distribution</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var course in courseGroups)
                        {
                            <div class="col-md-3 mb-3">
                                <div class="card border-left-primary h-100">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                    @course.Key
                                                </div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800">@course.Value Students</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="bi bi-book-half fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- Add Filter Section -->
    <div class="card shadow mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-funnel-fill me-2"></i>Filters</h5>
        </div>
        <div class="card-body">
            <form id="filterForm" method="get">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label">Academic Year <span class="text-danger">*</span></label>
                            <select id="yearId" name="yearId" class="form-select" required>
                                <option value="">Select Year</option>
                                @foreach (var item in (SelectList)ViewBag.Years)
                                {
                                    <option value="@item.Value" selected="@(ViewBag.SelectedYear != null && ViewBag.SelectedYear.ToString() == item.Value)">
                                        @item.Text
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label">Course</label>
                            <select id="courseId" name="courseId" class="form-select">
                                <option value="">All Courses</option>
                                @foreach (var item in (SelectList)ViewBag.Courses)
                                {
                                    <option value="@item.Value" selected="@(ViewBag.SelectedCourse != null && ViewBag.SelectedCourse.ToString() == item.Value)">
                                        @item.Text
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label">Division</label>
                            <select id="divisionId" name="divisionId" class="form-select">
                                <option value="">All Divisions</option>
                                @foreach (var item in (SelectList)ViewBag.Divisions)
                                {
                                    <option value="@item.Value" selected="@(ViewBag.SelectedDivision != null && ViewBag.SelectedDivision.ToString() == item.Value)">
                                        @item.Text
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="form-label">Status</label>
                            <select id="isActive" name="isActive" class="form-select">
                                <option value="">All Status</option>
                                <option value="true" selected="@(ViewBag.SelectedStatus == true)">Active</option>
                                <option value="false" selected="@(ViewBag.SelectedStatus == false)">Inactive</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search me-1"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" id="searchInput" class="form-control" placeholder="Search students...">
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover" id="studentsTable">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.EnrollmentNo)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Course)</th>
                            <th>@Html.DisplayNameFor(model => model.AcademicYear)</th>
                            <th>@Html.DisplayNameFor(model => model.Division)</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.EnrollmentNo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@(item.Course != null ? item.Course.Name : "N/A")</td>
                                <td>@(item.AcademicYear != null ? item.AcademicYear.Name : "N/A")</td>
                                <td>@(item.Division != null ? item.Division.Name : "N/A")</td>
                                <td>@(item.IsActive ? "Active" : "Inactive")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-info" onclick="showStudentDetails(@item.Id)">
                                            <i class="bi bi-info-circle"></i>
                                        </button>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                        <a href="javascript:void(0);" onclick="showSubjectMapping(@item.Id)" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-book"></i> Map Subjects
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Existing search functionality
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#studentsTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Handle course change to update divisions
            $("#courseId").change(function() {
                var courseId = $(this).val();
                var divisionDropdown = $("#divisionId");
                
                // Reset division dropdown
                divisionDropdown.html('<option value="">All Divisions</option>');
                
                if (courseId) {
                    // Get divisions for selected course
                    $.get('/Students/GetDivisionsForCourse', { courseId: courseId }, function(data) {
                        $.each(data, function(i, item) {
                            divisionDropdown.append($('<option>', {
                                value: item.id,
                                text: item.name
                            }));
                        });
                    });
                }
            });

            // Form validation
            $("#filterForm").submit(function(e) {
                if (!$("#yearId").val()) {
                    e.preventDefault();
                    alert("Please select an Academic Year");
                    return false;
                }
                return true;
            });
        });

        // Existing showStudentDetails function
        function showStudentDetails(id) {
            $.get(`/Students/GetDetails/${id}`, function(data) {
                $('#modal-content').html(data);
                $('#modal').modal('show');
            });
        }
    </script>
}