@model List<TopicDiscussionItem>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        <i class="fas fa-info-circle me-2"></i>No discussion topics found for the selected criteria.
    </div>
}
else
{
    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Subject</th>
                    <th>Teacher</th>
                    <th>Discussion Topic</th>
                    <th class="text-center">Attendance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        <td>@item.SubjectName</td>
                        <td>@item.TeacherName</td>
                        <td>@(string.IsNullOrEmpty(item.DiscussionTopic) ? "-" : item.DiscussionTopic)</td>
                        <td class="text-center">
                            @item.StudentsPresent / @item.TotalStudents
                            <div class="progress" style="height: 5px;">
                                <div class="progress-bar" role="progressbar" 
                                     style="width: @(item.TotalStudents > 0 ? (item.StudentsPresent * 100 / item.TotalStudents) : 0)%">
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
