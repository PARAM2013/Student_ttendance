@model Student_Attendance.ViewModels.ClassViewModel

<form id="classForm" asp-action="CreateEdit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <span id="Name-Error" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CourseId" class="control-label">Course</label>
        <select asp-for="CourseId" asp-items="Model.Courses" class="form-control">
            <option value="">-- Select Course --</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
        <span id="CourseId-Error" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AcademicYearId" class="control-label">Academic Year</label>
        <select asp-for="AcademicYearId" asp-items="Model.AcademicYears" class="form-control">
            <option value="">-- Select Academic Year --</option>
        </select>
        <span asp-validation-for="AcademicYearId" class="text-danger"></span>
        <span id="AcademicYearId-Error" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>