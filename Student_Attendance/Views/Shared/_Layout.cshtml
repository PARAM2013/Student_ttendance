<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student_Attendance</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Student_Attendance.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">Student Attendance</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home me-2"></i> Dashboard</a>

                <a class="list-group-item list-group-item-action list-group-item-light p-3" data-bs-toggle="collapse" href="#studentMenu" role="button" aria-expanded="false" aria-controls="studentMenu">
                    <i class="fa fa-user-graduate me-2"></i>  Students Master
                </a>
                <div class="collapse" id="studentMenu">
                    <a class="list-group-item list-group-item-action list-group-item-light ps-5" asp-controller="Students" asp-action="Index">  List</a>
                    <a class="list-group-item list-group-item-action list-group-item-light ps-5" asp-controller="Students" asp-action="Create">Add New</a>
                    <a class="list-group-item list-group-item-action list-group-item-light ps-5" asp-controller="Students" asp-action="Import">Import</a>
                </div>

                <a class="list-group-item list-group-item-action list-group-item-light p-3" data-bs-toggle="collapse" href="#attendanceMenu" role="button" aria-expanded="false" aria-controls="attendanceMenu"><i class="fa fa-calendar-check me-2"></i> Attendance Master</a>
                <div class="collapse" id="attendanceMenu">
                </div>

                <a class="list-group-item list-group-item-action list-group-item-light p-3" data-bs-toggle="collapse" href="#academicMenu" role="button" aria-expanded="false" aria-controls="academicMenu"><i class="fa fa-cog me-2"></i> Academic Settings</a>
                <div class="collapse" id="academicMenu">
                    <a class="list-group-item list-group-item-action list-group-item-light ps-5" asp-area="" asp-controller="Academic" asp-action="AcademicYears"> Academic Years</a>
                    <a class="list-group-item list-group-item-action list-group-item-light ps-5" asp-area="" asp-controller="Academic" asp-action="Courses"> Courses</a>
                    <a class="list-group-item list-group-item-action list-group-item-light ps-5" asp-area="" asp-controller="Academic" asp-action="Classes"> Classes</a>
                    <a class="list-group-item list-group-item-action list-group-item-light ps-5" asp-area="" asp-controller="Academic" asp-action="Divisions"> Divisions</a>
                    <a class="list-group-item list-group-item-action list-group-item-light ps-5" asp-area="" asp-controller="Academic" asp-action="Specializations"> Specializations</a>
                    <a class="list-group-item list-group-item-action list-group-item-light ps-5" asp-area="" asp-controller="Academic" asp-action="Subjects"> Subjects</a>
                    <a class="list-group-item list-group-item-action list-group-item-light ps-5" asp-area="" asp-controller="Admin" asp-action="Users"> User Management</a>
                </div>

                <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-area="" asp-controller="Admin" asp-action="Logout"><i class="fa fa-sign-out-alt me-2"></i> Logout</a>
            </div>
        </div>
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">Toggle Menu</button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item active"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div id="alert-container"></div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Add jQuery Unobtrusive AJAX -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.unobtrusive-ajax/3.2.6/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        window.addEventListener('DOMContentLoaded', event => {
            // Toggle the side navigation
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                });
            }
        });
    </script>

    <footer class="border-top footer text-muted">
        <div class="container">
            © 2024 - Student_Attendance - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>