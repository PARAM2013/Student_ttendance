            </svg>

            This app is made by AMRISH PATEL
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize Select2 for student search with custom formatting
            $('#student-search').select2({
                placeholder: 'Search Students Attendance (type at least 3 characters)',
                allowClear: true,
                minimumInputLength: 3,
                ajax: {
                    url: '/Home/SearchStudents',
                    dataType: 'json',
                    delay: 300, // Debounce time in ms
                    data: function(params) {
                        return {
                            searchTerm: params.term
                        };
                    },
                    processResults: function(data) {
                        // No results found
                        if (data.length === 0) {
                            $('.no-results').show();
                        } else {
                            $('.no-results').hide();
                        }
                        
                        return {
                            results: $.map(data, function(item) {
                                return {
                                    id: item.id,
                                    text: item.name + ' - ' + item.className,
                                    studentData: item
                                };
                            })
                        };
                    },
                    cache: true
                },
                templateResult: formatStudent,
                templateSelection: formatStudentSelection
            });

            // Format the student in dropdown
            function formatStudent(student) {
                if (!student.id) return student.text;
                
                return $('<div class="student-option">' +
                    '<div class="student-name">' + student.text + '</div>' +
                    '</div>');
            }

            // Format the selected student
            function formatStudentSelection(student) {
                if (!student.id) return student.text;
                return student.text;
            }

            // Enable search button when a student is selected
            $('#student-search').on('change', function() {
                if ($(this).val()) {
                    $('#search-btn').prop('disabled', false);
                } else {
                    $('#search-btn').prop('disabled', true);
                }
            });

            // Handle search button click
            $('#search-btn').on('click', function() {
                const studentId = $('#student-search').val();
                if (!studentId) return;

                // Show loading spinner
                $('.loading-spinner').show();
                $('#search-btn').prop('disabled', true);

                // Fetch attendance data
                $.ajax({
                    url: '/Home/GetStudentAttendance',
                    type: 'GET',
                    data: { studentId: studentId },
                    success: function(data) {
                        $('.loading-spinner').hide();
                        
                        if (data.success) {
                            displayAttendanceReport(data);
                        } else {
                            $('.error-message').show();
                            $('#error-text').text(data.message || 'Failed to retrieve attendance data');
                            $('#search-btn').prop('disabled', false);
                        }
                    },
                    error: function() {
                        $('.loading-spinner').hide();
                        $('.error-message').show();
                        $('#search-btn').prop('disabled', false);
                    }
                });
            });

            // Back to search button
            $('#back-to-search').on('click', function() {
                $('#attendance-report').hide();
                $('#search-section').show();
                $('#search-btn').prop('disabled', false);
                $('#student-search').val(null).trigger('change');
                $('.error-message').hide();
            });

            // Function to display attendance report
            function displayAttendanceReport(data) {
                // Hide search section and show report
                $('#search-section').hide();
                $('#attendance-report').show();

                // Set student name and overall attendance
                $('#student-name').text(data.studentName);
                $('#overall-percentage').text(data.overallAttendance.toFixed(1));
                
                // Update attendance summary
                $('#total-classes').text(data.totalClasses);
                $('#attended-classes').text(data.attendedClasses);
                $('#missed-classes').text(data.totalClasses - data.attendedClasses);
                $('#attendance-percentage').text(data.overallAttendance.toFixed(1) + '%');

                // Create overall attendance chart
                const overallCtx = document.getElementById('overall-chart').getContext('2d');
                new Chart(overallCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Present', 'Absent'],
                        datasets: [{
                            data: [data.attendedClasses, data.totalClasses - data.attendedClasses],
                            backgroundColor: ['#4CAF50', '#F44336'],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            title: {
                                display: true,
                                text: 'Overall Attendance',
                                font: {
                                    size: 18
                                }
                            },
                            legend: {
                                position: 'bottom'
                            }
                        }
                    }
                });

                // Clear previous subject charts
                $('#subject-charts').empty();

                // Create subject-wise attendance charts
                data.subjectAttendance.forEach(function(subject, index) {
                    // Create container for this subject
                    const subjectDiv = $('<div class="subject-chart"></div>');
                    const canvas = $('<canvas id="subject-chart-' + index + '"></canvas>');
                    subjectDiv.append(canvas);
                    $('#subject-charts').append(subjectDiv);

                    // Create chart
                    const subjectCtx = document.getElementById('subject-chart-' + index).getContext('2d');
                    new Chart(subjectCtx, {
                        type: 'bar',
                        data: {
                            labels: ['Present', 'Absent'],
                            datasets: [{
                                label: subject.subjectName,
                                data: [subject.present, subject.total - subject.present],
                                backgroundColor: ['#4CAF50', '#F44336'],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                title: {
                                    display: true,
                                    text: subject.subjectName + ' (' + ((subject.present / subject.total) * 100).toFixed(1) + '%)',
                                    font: {
                                        size: 16
                                    }
                                },
                                legend: {
                                    display: false
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            const label = context.dataset.label || '';
                                            const value = context.raw || 0;
                                            const total = subject.total;
                                            const percentage = ((value / total) * 100).toFixed(1);
                                            return label + ': ' + value + ' (' + percentage + '%)';
                                        }
                                    }
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    max: subject.total
                                }
                            }
                        }
                    });
                });
            }
        });
    </script>
</body>
</html>