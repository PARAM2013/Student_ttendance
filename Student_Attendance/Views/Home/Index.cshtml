@model Student_Attendance.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    var today = DateTime.Today;
}

<div class="container-fluid py-4">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="institute-logo me-4">
                        <img src="@ViewBag.Logo" alt="Institute Logo" class="rounded" style="max-width: 120px; height: auto;" />
                    </div>
                    <div class="welcome-text">
                        <h1 class="display-5 mb-0">Welcome to @(Model?.Name ?? "Student Attendance System")</h1>
                        <p class="text-muted mb-0">@ViewBag.ShortName - Student Attendance Management</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-white shadow-sm" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Students</h6>
                            <h2 class="mb-0">@Model.TotalStudents</h2>
                        </div>
                        <i class="fas fa-user-graduate fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-white shadow-sm" style="background: linear-gradient(135deg, #38ef7d, #11998e);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Teachers</h6>
                            <h2 class="mb-0">@Model.TotalTeachers</h2>
                        </div>
                        <i class="fas fa-chalkboard-teacher fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Debug Information -->
    @if (User.IsInRole("Admin"))
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Debug Information</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Has Attendance Data:</strong> @Model.HasAttendanceData</p>
                        <p><strong>Course Attendance Count:</strong> @(Model.CourseAttendance?.Count ?? 0)</p>
                        @if (Model.DebugInfo != null)
                        {
                            <p><strong>Total Records Today:</strong> @Model.DebugInfo.TotalRecords</p>
                            <p><strong>Subjects With Attendance:</strong> @Model.DebugInfo.SubjectsWithAttendance</p>
                            <p><strong>Courses With Attendance:</strong> @Model.DebugInfo.CoursesWithAttendance</p>
                        }
                        @if (ViewBag.CourseAttendance != null)
                        {
                            <div class="mt-3">
                                <strong>Raw Course Attendance Data:</strong>
                                <pre class="mt-2 bg-light p-3 rounded">@System.Text.Json.JsonSerializer.Serialize(ViewBag.CourseAttendance)</pre>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Subject-wise Attendance -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Subject-wise Attendance (Today)</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.AttendanceError != null)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Error loading attendance data: @ViewBag.AttendanceError
                            <br/>
                            <small>Please check the logs for more details</small>
                        </div>
                    }
                    else if (!Model.HasAttendanceData)
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-calendar-day fa-2x mb-3"></i>
                            <p>No attendance records found for today.</p>
                            <small>Try taking attendance first</small>
                        </div>
                    }
                    else if (Model.CourseAttendance == null || !Model.CourseAttendance.Any())
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-info-circle fa-2x mb-3"></i>
                            <p>No course attendance data available.</p>
                            <small>Check if courses and subjects are properly configured</small>
                        </div>
                    }
                    else
                    {
                        <div class="accordion" id="courseAttendanceAccordion">
                            @foreach (var course in Model.CourseAttendance)
                            {
                                <div class="accordion-item mb-2">
                                    <h2 class="accordion-header" id="heading@(course.CourseId)">
                                        <button class="accordion-button collapsed" type="button" 
                                                data-bs-toggle="collapse" 
                                                data-bs-target="#collapse@(course.CourseId)">
                                            @course.CourseName 
                                            @if (course.Subjects?.Any() ?? false)
                                            {
                                                <span class="badge bg-primary ms-2">
                                                    @course.Subjects.Count subjects
                                                </span>
                                            }
                                        </button>
                                    </h2>
                                    <div id="collapse@(course.CourseId)" 
                                         class="accordion-collapse collapse" 
                                         data-bs-parent="#courseAttendanceAccordion">
                                        <div class="accordion-body p-0">
                                            @if (!course.Subjects?.Any() ?? true)
                                            {
                                                <div class="text-center text-muted py-3">
                                                    <p>No attendance records for any subjects in this course today.</p>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="table-responsive">
                                                    <table class="table table-hover align-middle mb-0">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th>Subject</th>
                                                                <th class="text-center">Code</th>
                                                                <th class="text-center">Present</th>
                                                                <th class="text-center">Absent</th>
                                                                <th class="text-center" style="width: 150px;">Attendance %</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var subject in course.Subjects)
                                                            {
                                                                var total = subject.PresentCount + subject.AbsentCount;
                                                                var percentage = total > 0 ? (subject.PresentCount * 100.0 / total) : 0;
                                                                <tr>
                                                                    <td>@subject.SubjectName</td>
                                                                    <td class="text-center">@subject.SubjectCode</td>
                                                                    <td class="text-center text-success">@subject.PresentCount</td>
                                                                    <td class="text-center text-danger">@subject.AbsentCount</td>
                                                                    <td>
                                                                        <div class="progress" style="height: 20px;">
                                                                            <div class="progress-bar bg-success" role="progressbar"
                                                                                 style="width: @percentage%">
                                                                                @percentage.ToString("F1")%
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="text-end mt-3">
                            <a href="@Url.Action("TestAttendanceData")" target="_blank" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-bug me-1"></i>Test Attendance Data
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Students" asp-action="Create" class="btn btn-outline-primary w-100 p-4">
                                <i class="fas fa-user-plus fa-2x mb-2"></i>
                                <div>Add New Student</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Attendance" asp-action="Take" class="btn btn-outline-success w-100 p-4">
                                <i class="fas fa-clipboard-check fa-2x mb-2"></i>
                                <div>Take Attendance</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Attendance" asp-action="MonthlyReport" class="btn btn-outline-info w-100 p-4">
                                <i class="fas fa-calendar-alt fa-2x mb-2"></i>
                                <div>Monthly Attendance Report</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Attendance" asp-action="TopicDiscussions" class="btn btn-outline-secondary w-100 p-4">
                                <i class="fas fa-comments fa-2x mb-2"></i>
                                <div>Topic Discussions Report</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
            margin-bottom: 1.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .btn-outline-primary:hover,
        .btn-outline-success:hover,
        .btn-outline-info:hover,
        .btn-outline-secondary:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .institute-logo img {
            border: 1px solid #dee2e6;
            padding: 0.25rem;
        }
        .welcome-text {
            flex: 1;
        }
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0,0,0,.125);
        }
        .opacity-50 {
            opacity: 0.5;
        }
        .progress {
            background-color: #e9ecef;
            border-radius: 0.25rem;
        }
        .table th {
            background-color: #f8f9fa;
        }
        .table-sm td, .table-sm th {
            padding: 0.3rem;
            font-size: 0.9rem;
        }
        .progress {
            margin-bottom: 0;
            min-width: 50px;
        }
        .table-responsive {
            scrollbar-width: thin;
        }
        .table-responsive::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }
        .table-responsive::-webkit-scrollbar-thumb {
            background-color: rgba(0,0,0,.2);
            border-radius: 3px;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
    <script>
        $(document).ready(function() {
            // Add any dashboard-specific JavaScript here
        });
    </script>
}
