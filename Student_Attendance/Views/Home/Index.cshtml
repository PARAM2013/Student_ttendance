@model Student_Attendance.Models.Institute

@{
    // Set institute info for menu (_Layout)
    ViewBag.ShortName = Model?.ShortName ?? "SAS";
    ViewBag.Logo = string.IsNullOrEmpty(Model?.Logo) ? "/images/default-logo.png" : Model.Logo;
    
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="institute-logo me-4">
                        <img src="@(string.IsNullOrEmpty(Model?.Logo) ? "/images/default-logo.png" : Model.Logo)" 
                             alt="Institute Logo" 
                             class="rounded"
                             style="max-width: 120px; height: auto;" />
                    </div>
                    <div class="welcome-text">
                        <h1 class="display-5 mb-0">Welcome to @(Model?.Name ?? "Student Attendance System")</h1>
                        <p class="text-muted mb-0">@(Model?.ShortName ?? "SAS") - Student Attendance Management</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Students</h6>
                            <h2 class="mb-0">@ViewBag.TotalStudents</h2>
                        </div>
                        <i class="fas fa-user-graduate fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Present Today</h6>
                            <h2 class="mb-0">@ViewBag.PresentToday</h2>
                        </div>
                        <i class="fas fa-check-circle fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-danger text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Absent Today</h6>
                            <h2 class="mb-0">@ViewBag.AbsentToday</h2>
                        </div>
                        <i class="fas fa-times-circle fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Courses</h6>
                            <h2 class="mb-0">@ViewBag.TotalCourses</h2>
                        </div>
                        <i class="fas fa-book fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Students" asp-action="Create" class="btn btn-outline-primary w-100 p-4">
                                <i class="fas fa-user-plus fa-2x mb-2"></i>
                                <div>Add New Student</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Attendance" asp-action="Take" class="btn btn-outline-success w-100 p-4">
                                <i class="fas fa-clipboard-check fa-2x mb-2"></i>
                                <div>Take Attendance</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-info w-100 p-4">
                                <i class="fas fa-chart-bar fa-2x mb-2"></i>
                                <div>View Reports</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Academic" asp-action="Subjects" class="btn btn-outline-secondary w-100 p-4">
                                <i class="fas fa-book-open fa-2x mb-2"></i>
                                <div>Manage Subjects</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
            margin-bottom: 1.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .btn-outline-primary:hover,
        .btn-outline-success:hover,
        .btn-outline-info:hover,
        .btn-outline-secondary:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .institute-logo img {
            border: 1px solid #dee2e6;
            padding: 0.25rem;
        }
        .welcome-text {
            flex: 1;
        }
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0,0,0,.125);
        }
        .opacity-50 {
            opacity: 0.5;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any dashboard-specific JavaScript here
        });
    </script>
}
