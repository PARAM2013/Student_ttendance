@model Student_Attendance.Models.Institute

@{
    ViewData["Title"] = "Dashboard";
    ViewBag.ShortName = Model?.ShortName ?? "SAS";
    ViewBag.Logo = string.IsNullOrEmpty(Model?.Logo) ? "/images/default-logo.png" : Model.Logo;
}

<div class="container-fluid py-4">
    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body d-flex align-items-center">
                    <div class="institute-logo me-4">
                        <img src="@(string.IsNullOrEmpty(Model?.Logo) ? "/images/default-logo.png" : Model.Logo)" 
                             alt="Institute Logo" 
                             class="rounded"
                             style="max-width: 120px; height: auto;" />
                    </div>
                    <div class="welcome-text">
                        <h1 class="display-5 mb-0">Welcome to @(Model?.Name ?? "Student Attendance System")</h1>
                        <p class="text-muted mb-0">@(Model?.ShortName ?? "SAS") - Student Attendance Management</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Overall Stats -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Students</h6>
                            <h2 class="mb-0">@ViewBag.TotalStudents</h2>
                        </div>
                        <i class="fas fa-user-graduate fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Teachers</h6>
                            <h2 class="mb-0">@ViewBag.TotalTeachers</h6>
                        </div>
                        <i class="fas fa-chalkboard-teacher fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Combined Course and Class Stats Row -->
    <div class="row mb-4">
        <!-- Course-wise Stats -->
        <div class="col-md-6 mb-4 mb-md-0">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">Course-wise Attendance</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                        <table class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Course</th>
                                    <th class="text-center">Students</th>
                                    <th class="text-center">Present</th>
                                    <th class="text-center">Absent</th>
                                    <th class="text-center">%</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stat in ViewBag.CourseStats)
                                {
                                    var totalStudents = stat.TotalStudents;
                                    var attendancePercentage = totalStudents > 0 
                                        ? (stat.TodayAttendance * 100.0 / totalStudents) 
                                        : 0;
                                    <tr>
                                        <td>@stat.CourseName</td>
                                        <td class="text-center">@totalStudents</td>
                                        <td class="text-center text-success">@stat.TodayAttendance</td>
                                        <td class="text-center text-danger">@stat.TodayAbsent</td>
                                        <td class="text-center">
                                            <div class="progress" style="height: 15px;">
                                                <div class="progress-bar bg-success" 
                                                     role="progressbar" 
                                                     style="width: @attendancePercentage%">
                                                    @attendancePercentage.ToString("F1")%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Class-wise Stats -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">Class-wise Attendance</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                        <table class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Class</th>
                                    <th class="text-center">Students</th>
                                    <th class="text-center">Present</th>
                                    <th class="text-center">%</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stat in ViewBag.ClassStats)
                                {
                                    var attendancePercentage = stat.TotalStudents > 0 
                                        ? (stat.TodayAttendance * 100.0 / stat.TotalStudents) 
                                        : 0;
                                    <tr>
                                        <td>@stat.ClassName</td>
                                        <td class="text-center">@stat.TotalStudents</td>
                                        <td class="text-center">@stat.TodayAttendance</td>
                                        <td class="text-center">
                                            <div class="progress" style="height: 15px;">
                                                <div class="progress-bar bg-success" 
                                                     role="progressbar" 
                                                     style="width: @attendancePercentage%">
                                                    @attendancePercentage.ToString("F1")%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Students" asp-action="Create" class="btn btn-outline-primary w-100 p-4">
                                <i class="fas fa-user-plus fa-2x mb-2"></i>
                                <div>Add New Student</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Attendance" asp-action="Take" class="btn btn-outline-success w-100 p-4">
                                <i class="fas fa-clipboard-check fa-2x mb-2"></i>
                                <div>Take Attendance</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Attendance" asp-action="MonthlyReport" class="btn btn-outline-info w-100 p-4">
                                <i class="fas fa-calendar-alt fa-2x mb-2"></i>
                                <div>Monthly Attendance Report</div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a asp-controller="Attendance" asp-action="TopicDiscussions" class="btn btn-outline-secondary w-100 p-4">
                                <i class="fas fa-comments fa-2x mb-2"></i>
                                <div>Topic Discussions Report</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
            margin-bottom: 1.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .btn-outline-primary:hover,
        .btn-outline-success:hover,
        .btn-outline-info:hover,
        .btn-outline-secondary:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .institute-logo img {
            border: 1px solid #dee2e6;
            padding: 0.25rem;
        }
        .welcome-text {
            flex: 1;
        }
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0,0,0,.125);
        }
        .opacity-50 {
            opacity: 0.5;
        }
        .progress {
            background-color: #e9ecef;
            border-radius: 0.25rem;
        }
        .table th {
            background-color: #f8f9fa;
        }
        .table-sm td, .table-sm th {
            padding: 0.3rem;
            font-size: 0.9rem;
        }
        .progress {
            margin-bottom: 0;
            min-width: 50px;
        }
        .table-responsive {
            scrollbar-width: thin;
        }
        .table-responsive::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }
        .table-responsive::-webkit-scrollbar-thumb {
            background-color: rgba(0,0,0,.2);
            border-radius: 3px;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any dashboard-specific JavaScript here
        });
    </script>
}
