@model Student_Attendance.Models.TeacherSubject

<div class="container-fluid">
    <h2>Allocate Subject</h2>
    <form asp-action="Allocate">
        <div class="form-group">
            <label asp-for="UserId">Teacher</label>
            <select asp-for="UserId" asp-items="ViewBag.Teachers" class="form-control">
                <option value="">Select Teacher</option>
            </select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SubjectId">Subject</label>
            <select asp-for="SubjectId" asp-items="ViewBag.Subjects" class="form-control">
                <option value="">Select Subject</option>
            </select>
            <span asp-validation-for="SubjectId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AcademicYearId">Academic Year</label>
            <select asp-for="AcademicYearId" asp-items="ViewBag.AcademicYears" class="form-control">
                <option value="">Select Academic Year</option>
            </select>
            <span asp-validation-for="AcademicYearId" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Allocate" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
